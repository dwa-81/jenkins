pipeline {
    agent {
        label 'AGENT-1'
    }

    stages {
        stage('Build') {
            steps {
                script{
                  sh 'echo Building'
                }
            }
        }
        stage('Test') {
            steps {
               script{ 
                 sh  'echo Testing'
               }
            }
        }
        stage('Deploy') {
            steps {
                script{
                  sh  'echo Deploying'
                }
            }
        }
    }

    post {
        always{
            echo "this section run always"
            deleteDir()
        }
        success{
            echo "this section run when pipeline success"
        }
        failure{
            echo "this section run when pipeline failure"
        }
    }
}
