pipeline {
    agent {
        label 'AGENT-1'
    }
    options {
        timeout(time: 10, unit: 'SECONDS')
    }

    stages {
        stage('Build') {
            steps {
                
                  sh 'echo Building'
                  sh 'sleep 10'
            }
        }
        stage('Test') {
            steps {
               
                 sh  'echo Testing'
               
            }
        }
        stage('Deploy') {
            steps {
                
                  sh  'echo Deploying'
                
            }
        }
    }

    post {
        always{
            echo "this section run always"
            deleteDir()
        }
        success{
            echo "this section run when pipeline success"
        }
        failure{
            echo "this section run when pipeline failure"
        }
    }
}
